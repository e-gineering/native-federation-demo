{
  "name": "native-federation-demo",
  "version": "1.0.0",
  "description": "Browser-native federation playground with vanilla JS",
  "scripts": {
    "start": "npm run setup:public-node_modules && concurrently \"npm run start:host\" \"npm run start:shared-utils\" \"npm run start:remote1\" \"npm run start:remote2\" \"npm run start:remote3\" \"npm run start:public-node_modules\"",
    "start:host": "http-server host -p 8000 --cors --proxy http://localhost:8000?",
    "start:remote1": "http-server remote1 -p 8001 --cors",
    "start:remote2": "http-server remote2 -p 8002 --cors",
    "start:remote3": "http-server remote3 -p 8003 --cors",
    "start:shared-utils": "http-server shared-utils -p 8004 --cors",
    "start:public-node_modules": "http-server public-node_modules -p 8005 --cors",
    "setup:public-node_modules": "npm run copy:es-module-shims && npm run copy:import-map-overrides",
    "copy:es-module-shims": "copy node_modules\\es-module-shims\\dist\\es-module-shims.debug.js public-node_modules\\es-module-shims.debug.js",
    "copy:import-map-overrides": "copy node_modules\\import-map-overrides\\dist\\import-map-overrides.js public-node_modules\\import-map-overrides.js",
    "postinstall": "npm run setup:public-node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "es-module-shims": "^2.6.2",
    "import-map-overrides": "^6.1.0"
  }
}
